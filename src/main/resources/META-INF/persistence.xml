<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="tpiPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>modelo.Administrador</class>
    <class>modelo.Estudio</class>
    <class>modelo.FamiliaAdoptante</class>
    <class>modelo.Gato</class>
    <class>modelo.HistoriaClinica</class>
    <class>modelo.Postulacion</class>
    <class>modelo.Reporte</class>
    <class>modelo.Sesion</class>
    <class>modelo.Tarea</class>
    <class>modelo.Tratamiento</class>
    <class>modelo.Usuario</class>
    <class>modelo.Veterinario</class>
    <class>modelo.Visita</class>
    <class>modelo.Voluntario</class>
    <class>modelo.Zona</class>
    <class>modelo.Aptitud</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tpiavanzadas?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <!-- Forzar creaciÃ³n -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
